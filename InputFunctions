# My example of a user-input project
# Showcasing my practice in utilizing f-strings and functions

name = input("Enter your name! : ")
age = int(input("Enter your age! : "))
closer = 'Have a great day!'

def welcome(name, age):
    print(f'Hello {name} ! Welcome to hell!')
    print(f'Your age is {str(age)} .')
    print(closer)

welcome(name, age)
